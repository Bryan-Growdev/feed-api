{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@envs/*": [
        "app/envs/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@schemas/*": [
        "shared/schemas/*"
      ]
    },
    "rootDirs": [
      "src",
      "tests"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": ["node_modules"]
}